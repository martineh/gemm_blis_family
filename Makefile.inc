BLIS_HOME    = /home/adcastel/opt/blis
INCLUDE_BLIS = -I$(BLIS_HOME)/include/blis/
LIB_BLIS     = -lblis -L$(BLIS_HOME)/lib

INCLUDE = ${INCLUDE_BLIS}
LIBS    = ${LIB_BLIS} -lm
